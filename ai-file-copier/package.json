{
  "name": "ai-file-copier",
  "displayName": "AI File Copier",
  "description": "Select files with checkboxes and copy their contents for AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "aiFileSelector",
          "name": "AI File Selector"
        }
      ]
    },
    "commands": [
      {
        "command": "aiFileCopier.copySelectedFiles",
        "title": "Copy Selected Files for AI"
      },
      {
        "command": "aiFileCopier.savePreset",
        "title": "Save Selection as Preset"
      },
      {
        "command": "aiFileCopier.loadPreset",
        "title": "Load Preset"
      },
      {
        "command": "aiFileSelector.refresh",
        "title": "Refresh AI File Selector"
      }
    ],
    "keybindings": [
      {
        "command": "aiFileCopier.copySelectedFiles",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}